@model UpdateSliderVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Update</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <img src="~/img/@Model.Image" width="200px" height="300px">
                    <input asp-for="Photo" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
                <span class="text-danger" asp-validation-for="Photo"></span>
            </form>
        </div>
    </div>
</div>

